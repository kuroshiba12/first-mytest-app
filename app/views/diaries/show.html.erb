<nav aria-label="breadcrumb" class="mb-4">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "一覧", diaries_path, class: "text-decoration-none" %></li>
    <li class="breadcrumb-item active"><%= @diary.title %></li>
  </ol>
</nav>

<div class="diary-content py-3">
  <h1 class="display-5 fw-bold text-dark mb-4"><%= @diary.title %></h1>
  
  <div class="p-4 bg-white border-start border-primary border-4 rounded shadow-sm mb-5">
    <p class="fs-5 text-secondary style-body" style="white-space: pre-wrap; line-height: 1.8;">
      <%= @diary.body %>
    </p>
  </div>

  <div class="d-flex gap-2">
    <%= link_to "編集する", edit_diary_path(@diary), class: "btn btn-warning px-4 shadow-sm" %>
    <%= link_to "一覧に戻る", diaries_path, class: "btn btn-light px-4 border" %>
    <div class="ms-auto">
      <%= link_to "削除", @diary, data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-link text-danger text-decoration-none" %>
    </div>
  </div>
</div>