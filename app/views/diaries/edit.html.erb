<% content_for :title, "日記の編集" %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="d-flex align-items-center mb-4">
      <h1 class="h2 fw-bold text-dark mb-0">日記を編集</h1>
    </div>

    <div class="card shadow-sm border-0 rounded-3 mb-4">
      <div class="card-body p-4">
        <%# 入力フォームの本体（_form.html.erb）を読み込み %>
        <%= render "form", diary: @diary %>
      </div>
    </div>

    <div class="d-flex justify-content-center gap-3">
      <%= link_to @diary, class: "text-decoration-none d-inline-flex align-items-center text-primary" do %>
        詳細を表示
      <% end %>
      <span class="text-muted">|</span>
      <%= link_to diaries_path, class: "text-decoration-none d-inline-flex align-items-center text-secondary" do %>
        一覧に戻る
      <% end %>
    </div>
  </div>
</div>